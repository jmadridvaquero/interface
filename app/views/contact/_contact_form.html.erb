<div class="container text-align-center">
  <%= form_for @contact, url: contact_index_path, remote: true do |f| %>
    <%= f.label :name, class: "contact-text" %></br>
    <%= f.text_field  :name, required: true, class: "contact-form-text-area" %></br>

    <%= f.label :email, class: "contact-text"  %></br>
    <%= f.text_field :email, required: true, class: "contact-form-text-area" %></br>

  <%= f.label :message, class: "contact-text"  %></br>
  <%= f.text_area :message,  required: true, class: "contact-form-text-area",
                    placeholder: ""%></br>

  <div class= "hidden">
    <%= f.label :nickname %>
    <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
  </div>

  <%= f.submit t("send"), class: 'btn btn-danger' %>

  <% end %>
  <div class="col-md-6" id="flash-message">
    <%= render 'flash' %>
  </div>
</div>